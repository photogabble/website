<figure class="citation">
    {{ content }}
    {%- if cite -%}
        <figcaption>{%- if cite.href -%}
            <small>&mdash; <a href="{{ cite.href }}">{{ cite.name }}</a> | <a href="{{ page.url }}">notes</a></small>
        {%- else -%}
            <small>&mdash; {{ cite.name }} | <a href="{{ page.url }}">my notes</a></small>
        {%- endif -%}
        </figcaption>
    {%- endif -%}
</figure>
